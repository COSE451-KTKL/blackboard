extends ../base.pug

block content
    if lectures
        h2 lecture list
        if lectures.length === 0
            h3(style="color:red") No lectures have been opened yet. Ask the professor.
        else
            table(border="1")
                thead
                    th  
                    th lecture name
                    th professor name
                tbody
                    for lecture in lectures
                        tr
                            if sugangLectureIds.includes(lecture._id.toString())
                                td 
                                    h4(style="color:red") enrolling
                            else
                                td(style="padding: 0px")
                                    form(method="POST" style="display:inline")
                                        input(type="hidden" name="lectureId" value=lecture._id)
                                        input(type="submit" value="enroll")
                                
                            td
                                a(href=`/stu/lecture/${lecture._id}`)= lecture.lectureName
                            td
                                h4=lecture.profId.name
            
            hr
            a(href="/stu/lecture") sugang lectures

