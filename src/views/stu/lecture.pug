extends ../base.pug

block content
    if lectures
        if lectures.length === 0
            h3(style="color:red") No lectures are being taken. Please take a lecture.
        else
            h2 sugang lectures
            ul
            each lecture in lectures
                li
                    a(href=`/stu/lecture/${lecture._id}`)= lecture.lectureName
                    br
                    br
            hr
        a(href="/stu/sugang") go to enroll
